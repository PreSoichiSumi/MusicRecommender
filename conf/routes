# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#
GET		/search_music_title				controllers.MusicSearcher.searchMusicFromMusicName(music_name:String)
GET		/search_music_artist				controllers.MusicSearcher.searchMusicFromArtistName(artist_name:String)


GET		/recommend						controllers.RecommendController.recommend(id: Long)

#account_id:Long, music_id:Long

POST	/sung_music						controllers.MusicRegister.register()
GET		/sung_music						controllers.MusicRegister.registerGet(account_id:Long, music_id:Long)


#name:String
POST	/account						controllers.AccountController.post()
GET		/account						controllers.AccountController.get(name: String)

GET		/search_music_title_ranged			controllers.MusicSearcher.searchMusicFromMusicNameRanged(music_name:String, page_length:Integer, page_number:Integer)
GET		/search_music_artist_ranged			controllers.MusicSearcher.searchMusicFromArtistNameRanged(artist_name:String, page_length:Integer, page_number:Integer)

GET		/room/in						controllers.RoomInOut.in(account_id:Long, room_name:String)
GET		/room/out						controllers.RoomInOut.out(account_id:Long) 

GET		/searchMusicTitleRanged			controllers.MusicSearcher.searchMusicFromMusicNameRanged(musicName:String, pageLength:Integer, pageNumber:Integer)
GET		/searchMusicArtistRanged			controllers.MusicSearcher.searchMusicFromArtistNameRanged(artistName:String, pageLength:Integer, pageNumber:Integer)

POST	/create_room						controllers.RoomController.createRoom(room_name: String, user_id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
