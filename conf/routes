# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#
GET		/searchMusicTitle				controllers.MusicSearcher.searchMusicFromMusicName(musicName:String)
GET		/searchMusicArtist				controllers.MusicSearcher.searchMusicFromArtistName(artistName:String)


GET		/recommend						controllers.RecommendController.recommend(id: Long)

POST	/sungMusic						controllers.MusicRegister.register()

GET		/searchMusicTitleRanged			controllers.MusicSearcher.searchMusicFromMusicNameRanged(musicName:String, pageLength:Integer, pageNumber:Integer)
GET		/searchMusicArtistRanged			controllers.MusicSearcher.searchMusicFromArtistNameRanged(artistName:String, pageLength:Integer, pageNumber:Integer)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
